<%= content_tag :h1, "React Calendar" %>
<%= content_tag :h2, "Appointments" %>
<%= content_tag :h3, "Make new Appointment" %>

<% form_for @appointment do |f| %>
    <%= f.text_field :title %>
    <%= f.text_field :appt_time %>
    <%= f.submit %>

<% end %>

<% @appointments.each do |a| %>
    <%= content_tag :h3, a.title %>
    <%= content_tag :p, a.appt_time %>
<% end %>
